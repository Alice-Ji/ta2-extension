{
  "manifest_version": 3,
  "name": "TAÂ² Smart Grading Assistant",
  "version": "1.0",
  "host_permissions": ["<all_urls>"],

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"],
      "css": ["styles.css"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]
}
